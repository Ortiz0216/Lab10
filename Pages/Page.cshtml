@page
@model NewModel

<h1>Lab 10</h1>
<hr />
<div class="container"> 
	<div class="row"> 
		<div class="col-md-4 border border-danger">
            <form method="post">
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
					<span asp-validation-for="FirstName" class = "text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
					<span asp-validation-for="LastName" class = "text-danger"></span>
                </div>
				<div class="form-group">
                    <label asp-for="CCNumber" class="control-label"></label>
                    <input asp-for="CCNumber" class="form-control" />
					<span asp-validation-for="CCNumber" class = "text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>
		</div> 
		<div class="col-md-8 border border-danger">
			<img src = "pic/pepe.jpg" width= "150px" height="150px">
		</div> 
	</div>
	<div class="row"> 
		<div class="col-3 border border-warning">
			@Model.FirstName
		</div> 
		<div class="col-5 border border-warning">
			@Model.LastName
		</div>
		<div class="col-4 border border-warning">
            Column Three
		</div>  
	</div>
</div> 
@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
